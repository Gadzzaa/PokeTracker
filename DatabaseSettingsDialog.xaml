<Window x:Class="WpfApp1.DatabaseSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Database Settings" Height="750" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a2e"
        FontFamily="Segoe UI"
        Opacity="0">

    <Window.Resources>
        <LinearGradientBrush x:Key="PokemonGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#ee1515" Offset="0"/>
            <GradientStop Color="#ff6b6b" Offset="0.5"/>
            <GradientStop Color="#feca57" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#feca57"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#0f3460"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#feca57"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="#0f3460"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#feca57"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PokemonGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                   From="0" To="1" Duration="0:0:0.3"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PokemonGradient}" 
                Padding="20" CornerRadius="10" Margin="0,0,0,20">
            <TextBlock Text="Database Configuration" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Form Fields -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Server:" Style="{StaticResource LabelStyle}"/>
                <TextBox Name="ServerBox" 
                         Style="{StaticResource TextBoxStyle}"/>

                <TextBlock Text="Port:" Style="{StaticResource LabelStyle}"/>
                <TextBox Name="PortBox" 
                         Style="{StaticResource TextBoxStyle}"/>

                <TextBlock Text="Username:" Style="{StaticResource LabelStyle}"/>
                <TextBox Name="UserBox" 
                         Style="{StaticResource TextBoxStyle}"/>

                <TextBlock Text="Password:" Style="{StaticResource LabelStyle}"/>
                <PasswordBox Name="PasswordBox" 
                             Style="{StaticResource PasswordBoxStyle}"/>

                <TextBlock Text="Database Name:" Style="{StaticResource LabelStyle}"/>
                <TextBox Name="DatabaseBox" 
                         Style="{StaticResource TextBoxStyle}"/>

                <TextBlock Name="StatusText" 
                           Foreground="#5cd85a"
                           FontSize="14"
                           Margin="0,15,0,0"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="🔌 Test Connection" 
                    Name="TestButton"
                    Style="{StaticResource ButtonStyle}"
                    Click="TestConnection_Click"
                    Width="180"/>
            <Button Content="💾 Save" 
                    Name="SaveButton"
                    Style="{StaticResource ButtonStyle}"
                    Click="Save_Click"
                    Width="120"/>
            <Button Content="Cancel" 
                    Style="{StaticResource ButtonStyle}"
                    Click="Cancel_Click"
                    Width="120"/>
        </StackPanel>
    </Grid>
</Window>