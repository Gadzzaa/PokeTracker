<Window x:Class="WpfApp1.AddEditionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Edition" Height="500" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a2e"
        FontFamily="Segoe UI">

    <Window.Resources>
        <LinearGradientBrush x:Key="PokemonGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#ee1515" Offset="0"/>
            <GradientStop Color="#ff6b6b" Offset="0.5"/>
            <GradientStop Color="#feca57" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#feca57"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#0f3460"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#feca57"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PokemonGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PokemonGradient}" 
                Padding="20" CornerRadius="10" Margin="0,0,0,20">
            <TextBlock Text="Add New Card Edition" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Form Fields -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Edition Name:" Style="{StaticResource LabelStyle}"/>
            <TextBlock Text="(e.g., Stellar Crown)" 
                       Foreground="#feca57" 
                       FontSize="12" 
                       Margin="0,0,0,10"
                       Opacity="0.7"/>
            <TextBox Name="EditionNameBox" 
                     Style="{StaticResource TextBoxStyle}"/>

            <TextBlock Text="Edition Identifier:" Style="{StaticResource LabelStyle}"/>
            <TextBlock Text="(e.g., sv07 for API lookups)" 
                       Foreground="#feca57" 
                       FontSize="12" 
                       Margin="0,0,0,10"
                       Opacity="0.7"/>
            <TextBox Name="EditionIdentifierBox" 
                     Style="{StaticResource TextBoxStyle}"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Add Edition" 
                    Name="AddButton"
                    Style="{StaticResource ButtonStyle}"
                    Click="AddEdition_Click"
                    Width="140"/>
            <Button Content="Cancel" 
                    Style="{StaticResource ButtonStyle}"
                    Click="Cancel_Click"
                    Width="120"/>
        </StackPanel>
    </Grid>
</Window>